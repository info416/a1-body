---
// このレイアウトが受け取るプロパティを定義
export interface Props {
    title: string;
}
const { title } = Astro.props;
import BaseLayout from '../layouts/BaseLayout.astro';
---
<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="Cache-Control" content="no-store">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title} - A1 Project</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <button class="hamburger-menu" aria-label="メニューを開く" aria-controls="sidebar" aria-expanded="false">
        <span class="hamburger-menu-inner"><span></span><span></span><span></span></span>
    </button>
    <div class="site-overlay"></div>

    <div class="site-container">
        <aside class="sidebar">
            <a href="/dashboard" class="site-logo">
                </a>
            <nav class="main-nav">
                <ul>
                    <li class="nav-item"><a href="/dashboard">ダッシュボード</a></li>
                    <li class="nav-item"><a href="/shintaku_no_ma">神託の間</a></li>
                    <li class="nav-item"><a href="/treasury">叡智の宝物庫</a></li>
                    <li class="nav-item"><a href="/sanctuary">聖域への扉</a></li>
                </ul>
            </nav>
            <div class="user-profile">
                 </div>
        </aside>

        <main class="main-content">
            <slot />
        </main>
    </div>
<script src="../scripts/main.js"></script>
</body>
</html>