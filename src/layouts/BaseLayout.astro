---
// このレイアウトが受け取るプロパティを定義
import type { Props as BaseProps } from 'astro:content';

export interface Props {
    title: string;
}
const { title } = Astro.props;
const currentPage = Astro.url.pathname;
---
<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="Cache-Control" content="no-store">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title} - A1 Project</title>
    <link rel="stylesheet" href="/tailwindcss.css">
    <link rel="stylesheet" href="/style.css">
    <slot name="head" />
</head>
<body>
    <script is:inline>
        // --- Gatekeeper Protocol ---
        const publicPaths = [
            '/login',
            '/password-reset',        // ★【追加】パスワードリセット申請ページ
        ]; // 門番がチェックしない例外ページ
        const token = localStorage.getItem('jwt_token');
        // .replace(/\/$/, "") は、URLの末尾にスラッシュがあってもなくても認識させるための、美しいおまじない
        const currentPath = window.location.pathname.replace(/\/$/, "");

        // 今いるページが例外リストに含まれておらず、かつ、トークンを持っていない場合
        if (!publicPaths.includes(currentPath) && !token) {
            // ログインページへ強制送還する
            window.location.href = '/login';
        }
    </script>

    <button class="hamburger-menu" aria-label="メニューを開く" aria-controls="sidebar" aria-expanded="false">
    <span class="hamburger-menu-inner">
        <span></span>
        <span></span>
        <span></span>
    </span>
    </button>
<div class="site-overlay"></div>

    <div class="site-container">
        <aside class="sidebar">
            <a href="/dashboard" class="site-logo">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M10.5 6h9.75M10.5 6a1.5 1.5 0 11-3 0m3 0a1.5 1.5 0 10-3 0M3.75 6H7.5m3 12h9.75m-9.75 0a1.5 1.5 0 01-3 0m3 0a1.5 1.5 0 00-3 0m-3.75 0H7.5m9-6h3.75m-3.75 0a1.5 1.5 0 01-3 0m3 0a1.5 1.5 0 00-3 0m-9.75 0h9.75" /></svg>
                <span>A1 Project</span>
            </a>
            <nav class="main-nav">
                <ul class="nav-list">
                    <li class="nav-item"><a href="/dashboard">ダッシュボード</a></li>
                    <li class="nav-item"><a href="/program/chapter-00">自己進化プログラム</a></li>
                    <li class="nav-item"><a href="/console">調律師のコンソール</a></li>
                    <li class="nav-item"><a href="/shintaku_no_ma">神託の間</a></li>
                    <li class="nav-item has-submenu"><a href="/treasury" class="submenu-toggle">叡智の宝物庫</a>
                        <ul class="submenu">
                        <li class="submenu-item"><a href="/treasury/prompts">プロンプトの武器庫</a></li>
                        <li class="submenu-item"><a href="/treasury/frameworks">思考フレームワークの書庫</a></li>
                        <li class="submenu-item"><a href="/treasury/miniproduct">ミニプロダクト設計図集</a></li>
                        </ul>
                    </li>
                    <li class="nav-item"><a href="/sanctuary">A1ギルド</a></li>
                </ul>
            </nav>
            <div class="user-profile">
                <a href="#" class="profile-link">
                    <div class="avatar">庭</div>
                    <span class="user-name">叡智の庭師</span>
                </a>
                <a href="#" id="logout-button" class="logout-link">ログアウト</a>
            </div>
        </aside>

        <main class="main-content">
            <div class="content-wrapper">
            <slot />
            </div>
        </main>
    </div>
<script is:raw src="/main.js"></script>
</body>
</html>