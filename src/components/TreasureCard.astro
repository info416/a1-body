---
// データを受け取るための定義
const { treasure } = Astro.props;
const { href, title, description, category } = treasure;
---
<div class="card treasure-card" data-category={category}>
  <a href={href} class="card-link">
    <svg class="card-icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" d="M21 7.5l-9-5.25L3 7.5m18 0l-9 5.25m9-5.25v9l-9 5.25M3 7.5l9 5.25M3 7.5v9l9 5.25m0-9v9" />
    </svg>
    <h3 class="card-title">{title}</h3>
    <p class="card-description">{description}</p>
    <span class="card-cta">詳しく見る &rarr;</span>
  </a>
</div>