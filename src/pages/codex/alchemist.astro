        document.addEventListener('DOMContentLoaded', () => {
            // --- フェードイン ---
            const targets = document.querySelectorAll('.fade-in');
            const observer = new IntersectionObserver((entries, obs) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) { 
                        entry.target.classList.add('is-visible');
                        obs.unobserve(entry.target); 
                    }
                });
            }, { rootMargin: '0px 0px -100px 0px', threshold: 0 });
            targets.forEach(target => { observer.observe(target); });

            // --- プロンプトコピー ---
            const copyButtons = document.querySelectorAll('.copy-prompt-btn');
            copyButtons.forEach(button => {
                button.addEventListener('click', () => {
                    const promptBlock = button.closest('.prompt-block');
                    const codeElement = promptBlock?.querySelector('.prompt-text'); 
                    if (codeElement) {
                        const textToCopy = codeElement.textContent || '';
                        navigator.clipboard.writeText(textToCopy).then(() => {
                            const buttonText = button.querySelector('span');
                            if(buttonText) buttonText.textContent = 'コピー完了!';
                            button.classList.add('copied');
                            setTimeout(() => {
                                if(buttonText) buttonText.textContent = 'コピー';
                                button.classList.remove('copied');
                            }, 2000);
                        }).catch(err => {
                            console.error('コピー失敗:', err);
                            const buttonText = button.querySelector('span');
                            if(buttonText) buttonText.textContent = '失敗';
                            setTimeout(() => { if(buttonText) buttonText.textContent = 'コピー'; }, 2000);
                        });
                    } else { console.error('コピー対象が見つかりません。'); }
                });
            });
        });
