    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // =============================================================
            // --- 【完全版】コア機能の実装 ---
            // =============================================================
            const dashboardView = document.getElementById('dashboard-view');
            const consoleView = document.getElementById('console-view');
            const navCards = document.querySelectorAll('.nav-card');
            const consoleHomeLink = document.getElementById('console-home-link');
            const tabItems = document.querySelectorAll('.tab-item');
            const toolContents = document.querySelectorAll('.tool-content');
            const copyButtons = document.querySelectorAll('.copy-button');

            function showView(viewId) {
                dashboardView.style.display = 'none';
                consoleView.style.display = 'none';
                document.getElementById(viewId).style.display = 'block';
            }

            navCards.forEach(card => {
                card.addEventListener('click', () => {
                    const toolName = card.dataset.tool;
                    switchTool(toolName);
                    showView('console-view');
                });
            });

            consoleHomeLink.addEventListener('click', () => {
                showView('dashboard-view');
            });

            function switchTool(toolName) {
                tabItems.forEach(item => {
                    item.classList.toggle('tab-active', item.dataset.tool === toolName);
                    item.classList.toggle('tab-inactive', item.dataset.tool !== toolName);
                });
                toolContents.forEach(content => {
                    content.classList.toggle('active', content.id === `tool-${toolName}`);
                });
            }

            tabItems.forEach(item => {
                item.addEventListener('click', (e) => {
                    e.preventDefault();
                    switchTool(item.dataset.tool);
                });
            });

            copyButtons.forEach(button => {
                button.addEventListener('click', (e) => {
                    const outputContainer = e.currentTarget.closest('.prompt-output-container');
                    const outputElement = outputContainer.querySelector('.prompt-output');
                    const feedbackElement = outputContainer.querySelector('.copy-feedback');
                    const textToCopy = outputElement.innerText;
                    navigator.clipboard.writeText(textToCopy).then(() => {
                        feedbackElement.style.opacity = '1';
                        feedbackElement.style.transform = 'translate-y(0)';
                        setTimeout(() => {
                            feedbackElement.style.opacity = '0';
                            feedbackElement.style.transform = 'translate-y(-0.5rem)';
                        }, 2000);
                    });
                });
            });
            
            // =============================================================
            // --- データ送信 & プロンプト生成 ---
            // =============================================================
            const WEBHOOK_URL = 'https://hook.us2.make.com/szk4fwyq5gocz1b9j5hmut7v87iagaxx';

            function sendData(toolName, data) {
                fetch(WEBHOOK_URL, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ tool: toolName, inputs: data, timestamp: new Date().toISOString() })
                }).catch(error => console.error('Data sending failed:', error));
            }

            document.getElementById('generate-mission-btn').addEventListener('click', () => {
                const data = { q1: document.getElementById('mission-q1').value, q2: document.getElementById('mission-q2').value, q3: document.getElementById('mission-q3').value, q4: document.getElementById('mission-q4').value, q5: document.getElementById('mission-q5').value, q6: document.getElementById('mission-q6').value, };
                generateMissionOutput(data);
                sendData('使命発見AIコーチ', data);
            });

            document.getElementById('generate-brake-btn').addEventListener('click', () => {
                const data = { q1: document.getElementById('brake-q1').value, q2: document.getElementById('brake-q2').value, q3: document.getElementById('brake-q3').value, q4: document.getElementById('brake-q4').value, };
                generateBrakeOutput(data);
                sendData('行動ブレーキ破壊AI', data);
            });
            
            document.getElementById('generate-concept-btn').addEventListener('click', () => {
                 const data = { q1: document.getElementById('concept-q1').value, q2: document.getElementById('concept-q2').value, q3: document.getElementById('concept-q3').value, q4: document.getElementById('concept-q4').value, };
                generateConceptOutput(data);
                sendData('高単価コンセプトAI', data);
            });

            function generateMissionOutput(data) {
                const q1 = data.q1 || '【夢中になれること】'; const q2 = data.q2 || '【得意なこと】'; const q3 = data.q3 || '【助けたい人】'; const q4 = data.q4 || '【その人の悩み・痛み】'; const q5 = data.q5 || '【導きたい輝かしい未来】'; const q6 = data.q6 || '【提供する最も重要な価値】';
                const outputEl = document.querySelector('[data-output-for="mission"]');
                outputEl.textContent = `# 指示\n\nあなたは、人の内なる可能性を言語化する天才的な詩人であり、伝説のブランドコンサルタントです。\nクライアントから預かった魂の情報を統合し、その人の一生の指針となるような、感動的でパワフルな「ミッションステートメント」を3案、授けてください。\n\n## ミッションステートメントの原則\n\n* **魂の統合:** 入力された全ての要素を、一つの美しい物語として紡ぎ合わせます。\n* **感情の増幅:** 「すごい」ではなく「心が震える」レベルの言葉を選びます。\n* **独自性の強調:** クライアントが唯一無二の存在であることを、読者に確信させます。\n* **記憶への刻印:** 短く、覚えやすく、口ずさみたくなるようなリズムを重視します。\n\n## クライアントの魂のデータ\n\n* **情熱の源泉（夢中になれること）:**\n    ${q1}\n* **天賦の才（得意なこと）:**\n    ${q2}\n* **貢献したい対象（助けたい人）:**\n    ${q3}\n* **対象者の痛み（最も深刻な悩み）:**\n    ${q4}\n* **約束する未来（導きたい輝かしい未来）:**\n    ${q5}\n* **提供する核心価値（最も重要なスキルや知識）:**\n    ${q6}\n\n## アウトプット形式\n\n以下の形式で、3つの異なる角度からのミッションステートメントを提案してください。\n\n**【提案1：ビジョナリー・ステートメント】**\n（情熱と約束する未来に焦点を当て、詩的で大きなビジョンを語る案）\n\n**【提案2：バリュー・プロポジション】**\n（対象者の痛みと提供価値に焦点を当て、「誰の、どんな問題を、何で解決するのか」を力強く宣言する案）\n\n**【提案3：パーソナル・クレド】**\n（天賦の才と貢献したい想いに焦点を当て、個人的な信念や信条として語る案）`;
            }

            function generateBrakeOutput(data) {
